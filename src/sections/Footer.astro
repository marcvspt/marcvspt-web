---
import LinkedInIcon from "@/icons/LinkedInIcon.astro";
import GitHubIcon from "@/icons/GitHubIcon.astro";
import HackTheBoxIcon from "@/icons/HackTheBoxIcon.astro";
import XIcon from "@/icons/XIcon.astro";
import MailIcon from "@/icons/MailIcon.astro";

import { SOCIAL_DATA } from "@/scripts/data.js";

const currentYear = new Date().getFullYear();
---

<footer
    class="flex flex-col pb-2 items-center justify-center gap-3 text-center"
>
    <ul class="flex flex-wrap items-center justify-center gap-2">
        {
            SOCIAL_DATA.map((social) => {
                return (
                    <li>
                        <a
                            id={`link-${social.name}`}
                            href={social.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="dark:hover:text-terciary-dark hover:text-secondary-dark/80"
                        >
                            {social.name === "LinkedIn" && <LinkedInIcon />}
                            {social.name === "GitHub" && <GitHubIcon />}
                            {social.name === "HackTheBox" && <HackTheBoxIcon />}
                            {social.name === "X/Twitter" && <XIcon />}
                            {social.name === "Contactame" && <MailIcon />}
                        </a>
                    </li>
                );
            })
        }
    </ul>
    <span class="text-sm dark:text-gray-300"
        >Â© {currentYear}.
        <a
            class="hover:font-semibold"
            target="_blank"
            rel="noopener noreferrer"
            href="https://github.com/marcvspt/marcvspt-web/blob/master/LICENSE"
            >GNU General Public License v3.0</a
        >.
    </span>
</footer>
