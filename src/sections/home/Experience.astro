---
import ExperienceIcon from "@/icons/ExperienceIcon.astro";
import LinkIcon from "@/icons/LinkIcon.astro";

import { EXPERIENCE_DATA } from "src/scripts/data.js";
---

<h2 class="font-semibold text-2xl mb-4">Experiencia</h2>
<ol class="relative border-l border-primary-dark ms-3">
    {
        EXPERIENCE_DATA.map((experience) => (
            <li class="mb-5 ms-6 ">
                <ExperienceIcon />
                <h3 class="flex items-center mb-1 font-medium text-lg ">
                    {experience.organization}
                    {experience.link && (
                        <a
                            class="px-1"
                            aria-label={experience.organization}
                            href={experience.link}
                        >
                            <LinkIcon />
                        </a>
                    )}
                    {experience.focus && (
                        <span class="text-xs font-medium me-2 px-2.5 py-0.5 rounded bg-secondary text-primary-dark/90 dark:bg-accent-dark dark:text-secondary ms-3">
                            {experience.focus}
                        </span>
                    )}
                </h3>
                <time class="block mb-2 text-sm font-light text-accent/80 dark:text-secondary">
                    {experience.date}
                </time>
                <p>{experience.description}</p>
            </li>
        ))
    }
</ol>
