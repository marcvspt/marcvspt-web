---
import Navigation from "@/components/Navigation.astro";
import ToggleTheme from "@/components/ToggleTheme.astro";
---

<header
    id="header"
    class="flex flex-row p-2 gap-x-6 md:gap-x-12 lg:gap-x-32 fixed top-0 z-10 items-center justify-center w-full mx-auto text-gray-700 dark:text-white"
>
    <img src="/img/logo.webp" alt="" class="rounded-full size-6" />
    <Navigation />
    <ToggleTheme />
</header>

<style>
    #header {
        animation: nav-shadown 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 100px;
    }

    #header {
        @apply bg-transparent;
    }

    @keyframes nav-shadown {
        0% {
            @apply bg-transparent;
        }
        to {
            @apply backdrop-blur shadow-sm;
        }
    }
</style>
