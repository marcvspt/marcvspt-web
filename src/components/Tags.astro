---
const { tags } = Astro.props;
---

<ul class="flex flex-wrap gap-2">
    {
        tags.map((tag: any) => (
            <li class="hover:scale-105 transition text-sm border border-terciary bg-terciary rounded-full px-2 py-[2px]">
                <a class="" href={`/tags/${tag}`}>
                    #{tag}
                </a>
            </li>
        ))
    }
</ul>
