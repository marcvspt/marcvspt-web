---
import CardExperience from "./CardExperience.astro";

const { ocupation, description, time, side, delay, company, link } =
    Astro.props;

const isLeft = side === "left";
---

<div
    class="relative flex items-center animate-slide-up"
    style={`animation-delay: ${delay};`}
>
    <!-- Punto central del timeline -->
    <div
        class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-blue-500 rounded-full border-4 border-slate-900"
    >
    </div>
    <!-- Contenido izquierdo -->
    <div
        class:list={[
            "flex-1",
            {
                "text-right pr-8": !isLeft,
                "pr-8": isLeft,
            },
        ]}
    >
        {
            !isLeft && (
                <CardExperience
                    ocupation={ocupation}
                    description={description}
                    time={time}
                    company={company}
                    link={link}
                />
            )
        }
    </div>

    <!-- Contenido derecho -->
    <div
        class:list={[
            "flex-1",
            {
                "pr-8": !isLeft,
                "pl-8": isLeft,
            },
        ]}
    >
        {
            isLeft && (
                <CardExperience
                    ocupation={ocupation}
                    description={description}
                    time={time}
                    company={company}
                    link={link}
                />
            )
        }
    </div>
</div>
